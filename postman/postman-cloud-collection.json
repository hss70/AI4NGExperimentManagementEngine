{
  "info": {
    "name": "AI4NG Question Engine - Cloud Testing",
    "description": "Cloud testing collection with Cognito authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://your-api-gateway-url.amazonaws.com"
    },
    {
      "key": "authToken",
      "value": ""
    },
    {
      "key": "experimentId",
      "value": ""
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Questionnaires",
      "item": [
        {
          "name": "Get All Questionnaires",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Debug",
                "value": "true",
                "disabled": true
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/questionnaires",
              "host": ["{{baseUrl}}"],
              "path": ["api", "questionnaires"]
            }
          }
        },
        {
          "name": "Create Questionnaire",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Debug",
                "value": "true",
                "disabled": true
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"prod-questionnaire\",\n  \"data\": {\n    \"name\": \"Production Questionnaire\",\n    \"description\": \"A questionnaire for production testing\",\n    \"questions\": [\n      {\n        \"id\": \"q1\",\n        \"text\": \"What is your experience level?\",\n        \"type\": \"select\",\n        \"options\": [\"Beginner\", \"Intermediate\", \"Advanced\"],\n        \"required\": true\n      }\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/questionnaires",
              "host": ["{{baseUrl}}"],
              "path": ["api", "questionnaires"]
            }
          }
        }
      ]
    },
    {
      "name": "Experiments",
      "item": [
        {
          "name": "Create Experiment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"Production Experiment\",\n    \"description\": \"Testing in production environment\"\n  },\n  \"questionnaireConfig\": {\n    \"questionnaireIds\": [\"prod-questionnaire\"]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/researcher/experiments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "researcher", "experiments"]
            }
          }
        }
      ]
    }
  ]
}