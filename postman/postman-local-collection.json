{
  "info": {
    "name": "AI4NG Question Engine - Local Testing",
    "description": "Local testing collection for Question Engine APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "experimentId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Questionnaires",
      "item": [
        {
          "name": "Get All Questionnaires",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/questionnaires",
              "host": ["{{baseUrl}}"],
              "path": ["api", "questionnaires"]
            }
          }
        },
        {
          "name": "Create Questionnaire",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"test-questionnaire\",\n  \"data\": {\n    \"name\": \"Test Questionnaire\",\n    \"description\": \"A test questionnaire for local development\",\n    \"questions\": [\n      {\n        \"id\": \"q1\",\n        \"text\": \"What is your name?\",\n        \"type\": \"text\",\n        \"required\": true\n      },\n      {\n        \"id\": \"q2\",\n        \"text\": \"Rate your experience (1-5)\",\n        \"type\": \"number\",\n        \"required\": true,\n        \"min\": 1,\n        \"max\": 5\n      }\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/questionnaires",
              "host": ["{{baseUrl}}"],
              "path": ["api", "questionnaires"]
            }
          }
        },
        {
          "name": "Get Questionnaire by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/questionnaires/test-questionnaire",
              "host": ["{{baseUrl}}"],
              "path": ["api", "questionnaires", "test-questionnaire"]
            }
          }
        }
      ]
    },
    {
      "name": "Experiments",
      "item": [
        {
          "name": "Get All Experiments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/experiments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "experiments"]
            }
          }
        },
        {
          "name": "Create Experiment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"Local Test Experiment\",\n    \"description\": \"Testing experiment creation locally\"\n  },\n  \"questionnaireConfig\": {\n    \"questionnaireIds\": [\"test-questionnaire\"]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/researcher/experiments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "researcher", "experiments"]
            }
          }
        },
        {
          "name": "Get My Experiments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/me/experiments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me", "experiments"]
            }
          }
        },
        {
          "name": "Sync Experiment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessions\": [\n    {\n      \"sessionId\": \"session-001\",\n      \"participantId\": \"participant-001\",\n      \"startTime\": \"2024-01-15T10:00:00Z\",\n      \"status\": \"active\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/experiments/{{experimentId}}/sync",
              "host": ["{{baseUrl}}"],
              "path": ["api", "experiments", "{{experimentId}}", "sync"]
            }
          }
        }
      ]
    },
    {
      "name": "Responses",
      "item": [
        {
          "name": "Get All Responses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/responses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "responses"]
            }
          }
        },
        {
          "name": "Create Response",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"experimentId\": \"{{experimentId}}\",\n    \"sessionId\": \"session-001\",\n    \"questionnaireId\": \"test-questionnaire\",\n    \"responses\": [\n      {\n        \"questionId\": \"q1\",\n        \"answer\": \"John Doe\",\n        \"timestamp\": \"2024-01-15T10:05:00Z\"\n      },\n      {\n        \"questionId\": \"q2\",\n        \"answer\": 4,\n        \"timestamp\": \"2024-01-15T10:06:00Z\"\n      }\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/responses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "responses"]
            }
          }
        },
        {
          "name": "Get Responses by Experiment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/responses?experimentId={{experimentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "responses"],
              "query": [
                {
                  "key": "experimentId",
                  "value": "{{experimentId}}"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}